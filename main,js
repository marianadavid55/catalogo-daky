var  hamburgerBtn ,  hiddenMenu ;

const  handleClick  =  ( )  =>  {
    if ( hiddenMenu . classList . contains ( "hiddenMenu" ) ) {
        hiddenMenu . classList . eliminar ( "hiddenMenu" )
    } más {
        hiddenMenu . classList . agregar (c "hiddenMenu" )
    }
}

const  handleLoad  =  ( )  =>  {
    hamburgerBtn  =  documento . querySelector ( ".hamburguerBtn" )
    hiddenMenu  =  documento . querySelector ( "encabezado> navegación" )
    hamburgerBtn . addEventListener ( "clic" ,  handleClick )
}

ventana . addEventListener ( "cargar" ,  handleLoad )